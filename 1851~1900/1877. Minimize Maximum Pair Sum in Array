class Solution {
public:
    int minPairSum(vector<int>& nums) {
        sort(nums.begin(), nums.end());
        int result = 0;
        
        int lastIdx = (int)nums.size()-1;
        for(int i=0;i<nums.size()/2;i++){
            result = max(result, nums[i]+nums[lastIdx-i]);
        }
        
        return result;
    }
};
