/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode(int x) : val(x), left(NULL), right(NULL) {}
 * };
 */
class Solution {
    void sumTree(TreeNode* n, int& sum){
        if(n == NULL) return;
        sumTree(n->right, sum);
        sum += n->val;
        n->val = sum;
        sumTree(n->left, sum);
    }
public:
    TreeNode* convertBST(TreeNode* root) {
        int sum = 0;
        sumTree(root, sum);
        return root;
    }
};